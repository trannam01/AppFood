<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_1_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/margin_1"
        app:cardCornerRadius="@dimen/radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/hinhdonhang"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ma"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:letterSpacing="0.05"
                android:fontFamily="@font/amarante"
                android:text="Mã Đơn Hàng:\nTên Khách Hàng:\nĐại Chỉ:\nSĐT:\nTổng Tiền:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/hinhdonhang"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/madonhang"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Ma Don Hang"
                android:textColor="@color/fourth"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/ma"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chudon"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Ten Khach Hang"
                android:textColor="@color/fourth"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/ma"
                app:layout_constraintTop_toBottomOf="@id/madonhang" />

            <TextView
                android:id="@+id/diachi"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Dia Chi"
                android:textColor="@color/fourth"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/ma"
                app:layout_constraintTop_toBottomOf="@id/chudon" />

            <TextView
                android:id="@+id/lienhe"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="SDT"
                android:textColor="@color/fourth"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/diachi"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ma" />

            <TextView
                android:id="@+id/tongtien"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@color/background_text_color"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Tong Tien"
                android:textColor="@color/fourth"
                android:textSize="@dimen/text_size_on_pic"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/lienhe"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ma" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>